{
  "name": "simple-restapi-nodejs-template",
  "version": "1.0.0",
  "description": "A simple restAPI nodejs template using expressjs, mongodb (or other database), logger (as winston and morgan)",
  "main": "index.mjs",
  "scripts": {
    "start": "pm2 start ecosystem.config.cjs --no-daemon",
    "stop": "pm2 kill",
    "dev": "cross-env NODE_ENV=development nodemon index.mjs",
    "test": "cross-env NODE_ENV=test nodemon index.mjs"
  },
  "type": "module",
  "keywords": [
    "restapi",
    "nodejs",
    "expressjs",
    "backend"
  ],
  "author": "David Dzung Dang",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddbdzung/Simple-RESTAPI-NodeJs-Template.git"
  },
  "license": "",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.6.0",
    "helmet": "^6.0.0",
    "http-status": "^1.5.3",
    "mongoose": "^6.6.4",
    "morgan": "^1.10.0",
    "pm2": "^5.2.0",
    "rotating-file-stream": "^3.0.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20"
  }
}
